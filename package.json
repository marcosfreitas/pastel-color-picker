{
  "name": "@marcosfreitas/pastel-color-picker",
  "version": "4.1.0",
  "type": "module",
  "description": "A comprehensive React color picker component with multiple variants, pastel color support, and alpha channel control",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "style": "dist/style.css",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./style.css": "./dist/style.css",
    "./css": "./dist/style.css",
    "./headless": {
      "types": "./dist/headless.d.ts",
      "import": "./dist/headless.esm.js",
      "require": "./dist/headless.js"
    },
    "./src": "./src/index.ts"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "tsc && vite build --mode lib",
    "build:css": "node scripts/build-css.js",
    "preview": "vite preview",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 15",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "prepublishOnly": "npm run build:lib",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major"
  },
  "keywords": [
    "react",
    "color-picker",
    "pastel",
    "color",
    "ui",
    "component",
    "typescript",
    "radix-ui",
    "shadcn"
  ],
  "author": {
    "name": "Marcos Freitas",
    "url": "https://github.com/marcosfreitas"
  },
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcosfreitas/pastel-color-picker.git"
  },
  "homepage": "https://marcosfreitas.github.io/pastel-color-picker",
  "bugs": {
    "url": "https://github.com/marcosfreitas/pastel-color-picker/issues"
  },
  "contributors": [
    {
      "name": "Marcos Freitas",
      "url": "https://github.com/marcosfreitas"
    }
  ],
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "clsx": "^2.1.1",
    "lucide-react": "^0.516.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@tailwindcss/vite": "^4.1.10",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
